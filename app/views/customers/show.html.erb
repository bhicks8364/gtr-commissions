
<h1>
  <strong>Name:</strong>
  <%= @customer.name %>
</h1>

<p>
  <strong>Address:</strong><br>
  <%= @customer.address %>
  CITY, <%= @customer.state %> <%= @customer.zipcode %>
</p>
<div class="col-md-6">
  <%= pie_chart @customer.commission_reports.order(:mark_up).group(:mark_up).count %>
</div>
<h3>Total Bill: <%= number_to_currency(@customer.total_bill(Date.today.end_of_week - 1.week)) %></h3>
<%= link_to 'Edit', edit_customer_path(@customer) %> <%= link_to 'Destroy', @customer, method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Back', customers_path %>

<div class="col-md-10">
  <%= render "commission_reports/table", commission_reports: @customer.commission_reports %>
</div>