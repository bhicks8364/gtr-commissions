<h2 class="page-header text-center">All Users</h2>
<div class="col-md-12 well">
  <%= render "import_form"  %>
</div>


<hr>
  <div class="col-md-4 well">
    <h2>Account Managers</h2>
    <ul class="list-group">
    <% User.account_managers.order(:username).each do |user| %>
      <%= link_to profile_path(user), class: "list-link" do %>
        <li class="list-group-item <%= user.advanced ? "list-group-item-success" : "list-group-item-info"%>"><%= user.id %> --- <%= user.name %> <span class="pull-right"><%= user.username %></span></li>
      <% end %>
    <% end %>
    </ul>
  </div>
  <div class="col-md-4 well">
    <h2>Recruiters</h2>
    <ul class="list-group">
    <% User.recruiters.order(:username).each do |user| %>
