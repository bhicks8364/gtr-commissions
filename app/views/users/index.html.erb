      <% end %>
    <% end %>
    </ul>
  </div>
  <div class="col-md-4 well">
    <h2> Admin</h2>
    <ul class="list-group">
    <% User.order(:username).admin.each do |user| %>
      <%= link_to profile_path(user), class: "list-link" do %>
        <li class="list-group-item"><%= user.id %> --- <%= user.name %> <span class="pull-right"><%= user.username %></span></li>
      <% end %>
    <% end %>
    </ul>
  </div>